{
  "info": {
    "name": "Dublin Bikes - Stations API Tests",
    "description": "Postman collection to validate v1 (file) and v2 (Cosmos) endpoints: list, single, summary, POST and PUT. Use Collection Runner or Newman.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001",
      "type": "string"
    },
    {
      "key": "sampleNumber",
      "value": "42",
      "type": "string"
    },
    {
      "key": "createdNumber",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "V1 - Stations",
      "item": [
        {
          "name": "GET /api/v1/stations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stations",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v1", "stations" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Has items and paging', function () {",
                  "  var body = pm.response.json();",
                  "  pm.expect(body).to.be.an('object');",
                  "  pm.expect(body).to.have.property('items');",
                  "  pm.expect(body.items).to.be.an('array');",
                  "  pm.expect(body).to.have.property('total');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "GET /api/v1/stations/:number",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stations/{{sampleNumber}}",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v1", "stations", "{{sampleNumber}}" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Station fields', function () {",
                  "  var s = pm.response.json();",
                  "  pm.expect(s).to.have.property('number');",
                  "  pm.expect(s).to.have.property('name');",
                  "  pm.expect(s).to.have.property('available_bikes');",
                  "  pm.expect(s).to.have.property('last_update_utc');",
                  "  pm.expect(s).to.have.property('last_update_local');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "GET /api/v1/stations/summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stations/summary",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v1", "stations", "summary" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Summary fields', function () {",
                  "  var b = pm.response.json();",
                  "  pm.expect(b).to.have.property('totalStations');",
                  "  pm.expect(b).to.have.property('totalBikeStands');",
                  "  pm.expect(b).to.have.property('totalAvailableBikes');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "POST /api/v1/stations",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"number\": 0,\n  \"name\": \"POSTMAN TEST STATION\",\n  \"address\": \"Test Address\",\n  \"position\": { \"lat\": 53.349, \"lng\": -6.260 },\n  \"bike_stands\": 10,\n  \"available_bike_stands\": 10,\n  \"available_bikes\": 0,\n  \"status\": \"OPEN\",\n  \"last_update\": 1729066000000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/stations",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v1", "stations" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('POST accepted', function () { pm.expect(pm.response.code).to.be.oneOf([200,201,204]); });",
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "  var body = pm.response.json();",
                  "  pm.environment.set('createdNumber', body.number || body.Number);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "PUT /api/v1/stations/:number",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"number\": {{createdNumber}},\n  \"name\": \"POSTMAN TEST STATION - UPDATED\",\n  \"address\": \"Test Address\",\n  \"position\": { \"lat\": 53.349, \"lng\": -6.260 },\n  \"bike_stands\": 10,\n  \"available_bike_stands\": 8,\n  \"available_bikes\": 2,\n  \"status\": \"OPEN\",\n  \"last_update\": 1729067000000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/stations/{{createdNumber}}",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v1", "stations", "{{createdNumber}}" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('PUT accepted', function () { pm.expect(pm.response.code).to.be.oneOf([200,204,404]); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "V2 - Stations",
      "item": [
        {
          "name": "GET /api/v2/stations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v2/stations",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v2", "stations" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Has items + paging', function () {",
                  "  var b = pm.response.json();",
                  "  pm.expect(b).to.have.property('items');",
                  "  pm.expect(b.items).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "GET /api/v2/stations/:number",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v2/stations/{{sampleNumber}}",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v2", "stations", "{{sampleNumber}}" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Has last_update_utc', function () {",
                  "  var s = pm.response.json();",
                  "  pm.expect(s).to.have.property('last_update_utc');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "GET /api/v2/stations/summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v2/stations/summary",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "v2", "stations", "summary" ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Summary totals present', function () {",
                  "  var b = pm.response.json();",
                  "  pm.expect(b).to.have.property('totalStations');",
                  "  pm.expect(b).to.have.property('totalAvailableBikes');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
}